# State Machine Evolution E2E Configuration
# Configuration file for the State Machine Evolution E2E pipeline

# Test Configuration
DSM_TEST_MODE=${DSM_TEST_MODE:-comprehensive}
DSM_CHAIN_LENGTH=${DSM_CHAIN_LENGTH:-100}
DSM_ENTROPY_VALIDATION=${DSM_ENTROPY_VALIDATION:-true}
DSM_SPARSE_INDEX_ENABLED=${DSM_SPARSE_INDEX_ENABLED:-true}
DSM_BATCH_PROCESSING=${DSM_BATCH_PROCESSING:-true}

# Performance Thresholds
DSM_HASH_CHAIN_MIN_OPS_PER_SEC=${DSM_HASH_CHAIN_MIN_OPS_PER_SEC:-1000}
DSM_STATE_TRANSITION_MIN_TPS=${DSM_STATE_TRANSITION_MIN_TPS:-500}
DSM_MAX_MEMORY_USAGE_MB=${DSM_MAX_MEMORY_USAGE_MB:-512}

# Security Configuration
DSM_CRYPTO_VALIDATION=${DSM_CRYPTO_VALIDATION:-true}
DSM_HASH_VERIFICATION=${DSM_HASH_VERIFICATION:-true}
DSM_SIGNATURE_VALIDATION=${DSM_SIGNATURE_VALIDATION:-true}

# Android Configuration
DSM_ANDROID_API_LEVEL=${DSM_ANDROID_API_LEVEL:-29}
DSM_ANDROID_ABI=${DSM_ANDROID_ABI:-x86_64}
DSM_ANDROID_NDK_VERSION=${DSM_ANDROID_NDK_VERSION:-r25c}

# JNI Configuration
DSM_JNI_VALIDATION=${DSM_JNI_VALIDATION:-true}
DSM_JNI_STRESS_TEST=${DSM_JNI_STRESS_TEST:-false}

# Reporting Configuration
DSM_GENERATE_HTML_REPORT=${DSM_GENERATE_HTML_REPORT:-true}
DSM_GENERATE_JSON_REPORT=${DSM_GENERATE_JSON_REPORT:-true}
DSM_GENERATE_COVERAGE_REPORT=${DSM_GENERATE_COVERAGE_REPORT:-true}

# Timeout Configuration
DSM_TEST_TIMEOUT_SECONDS=${DSM_TEST_TIMEOUT_SECONDS:-3600}
DSM_INDIVIDUAL_TEST_TIMEOUT=${DSM_INDIVIDUAL_TEST_TIMEOUT:-300}

# Debug Configuration
DSM_DEBUG_MODE=${DSM_DEBUG_MODE:-false}
DSM_VERBOSE_LOGGING=${DSM_VERBOSE_LOGGING:-false}
DSM_TRACE_ENABLED=${DSM_TRACE_ENABLED:-false}
