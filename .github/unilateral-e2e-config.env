# Unilateral Transactions E2E Pipeline Configuration
# Central configuration for all unilateral transaction testing parameters

# Test execution levels
TEST_LEVEL_QUICK="quick"
TEST_LEVEL_STANDARD="standard"
TEST_LEVEL_EXTENDED="extended"
TEST_LEVEL_STRESS="stress"

# Platform testing matrix
PLATFORM_MATRIX_MINIMAL="minimal"
PLATFORM_MATRIX_STANDARD="standard" 
PLATFORM_MATRIX_EXTENDED="extended"

# Storage node configuration for testing
STORAGE_NODES_COUNT=5
STORAGE_BASE_PORT=8080
STORAGE_TEST_PREFIX="unilateral-test"
STORAGE_CLUSTER_FORMATION_TIMEOUT=30
STORAGE_NODE_HEALTH_CHECK_TIMEOUT=10

# Unilateral transaction test parameters
UNILATERAL_INBOX_TTL_SECONDS=3600
UNILATERAL_MAX_INBOX_SIZE=1000
UNILATERAL_PROCESSING_INTERVAL_MS=1000
UNILATERAL_TEST_TIMEOUT_SECONDS=300

# Genesis verification settings
GENESIS_VERIFICATION_TIMEOUT=30
GENESIS_VERIFICATION_RETRIES=3
GENESIS_STORAGE_NODES_REQUIRED=3

# Chain tip management
CHAIN_TIP_UPDATE_TIMEOUT=15
CHAIN_TIP_SYNC_INTERVAL=5
CHAIN_TIP_VERIFICATION_DEPTH=10

# Directory service configuration
DIRECTORY_PUBLISH_TIMEOUT=20
DIRECTORY_SYNC_TIMEOUT=30
DIRECTORY_CONSISTENCY_CHECKS=true

# Test data generation
TEST_DEVICE_COUNT=5
TEST_TRANSACTIONS_PER_DEVICE=20
TEST_TOKEN_AMOUNTS="10,25,50,100,250"
TEST_MEMO_PATTERNS="unilateral_test_%d"

# Performance thresholds
MAX_INBOX_PROCESSING_TIME_MS=5000
MAX_DIRECTORY_PUBLISH_TIME_MS=3000
MAX_CHAIN_TIP_UPDATE_TIME_MS=2000
MIN_TRANSACTION_SUCCESS_RATE=95

# Stress testing parameters
STRESS_TEST_DURATION_SECONDS=300
STRESS_TEST_TRANSACTION_RATE=10
STRESS_TEST_CONCURRENT_DEVICES=10
STRESS_TEST_SUCCESS_THRESHOLD=90

# Security validation
ENABLE_GENESIS_VERIFICATION=true
ENABLE_SIGNATURE_VALIDATION=true
ENABLE_CHAIN_CONTINUITY_CHECKS=true
ENABLE_DOUBLE_SPEND_PREVENTION=true

# Logging and reporting
LOG_LEVEL="info"
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_HTML_REPORTS=true

# Android integration settings
ANDROID_JNI_TEST_ENABLED=true
ANDROID_BRIDGE_VALIDATION=true
ANDROID_UI_INTEGRATION_TEST=false

# Frontend integration
FRONTEND_INTEGRATION_TEST=true
FRONTEND_UNILATERAL_UI_TEST=true
FRONTEND_CONTACT_SYNC_TEST=true

# Error handling and recovery
ENABLE_ERROR_INJECTION=false
ENABLE_NETWORK_PARTITIONING_TEST=false
ENABLE_NODE_FAILURE_SIMULATION=false

# Output configuration
RESULTS_OUTPUT_DIR="."
LOG_OUTPUT_DIR="."
HTML_REPORT_TEMPLATE="unilateral_e2e_report_template.html"
JSON_SUMMARY_FILE="unilateral_e2e_summary.json"

# CI/CD specific settings
PARALLEL_TEST_EXECUTION=true
FAST_FAIL_ON_ERROR=false
CLEANUP_ON_SUCCESS=true
ARTIFACT_RETENTION_DAYS=7
