# Token Creation & Management E2E Configuration
# Configuration file for comprehensive token testing pipeline

# Environment Configuration
RUST_VERSION=1.70.0
ANDROID_API_LEVEL=33
NDK_VERSION=25.2.9519653
JAVA_VERSION=11

# Test Configuration  
TEST_TIMEOUT_MINUTES=30
MAX_RETRIES=3
PARALLEL_JOBS=4

# Token Testing Configuration
TOKEN_TEST_TYPES="creation,balance,transfer,mint,burn,lock,unlock,policy"
MAX_TOKENS_PER_TEST=100
MAX_TRANSFER_AMOUNT=1000000
BALANCE_CONSTRAINT_TESTS=true

# Performance Testing
PERFORMANCE_TEST_DURATION=300
STRESS_TEST_TRANSACTIONS=10000
CONCURRENT_OPERATIONS=50

# Security Testing
SECURITY_PENETRATION_TESTS=true
NEGATIVE_BALANCE_ATTEMPTS=100
DOUBLE_SPEND_ATTEMPTS=50

# Integration Testing
ANDROID_JNI_TESTS=true
RUST_INTEGRATION_TESTS=true
CROSS_PLATFORM_VALIDATION=true

# Merkle Proof Testing
MERKLE_PROOF_VALIDATION=true
SMT_PROOF_TESTS=true
BATCH_PROOF_VALIDATION=true

# Reporting Configuration
GENERATE_HTML_REPORTS=true
GENERATE_JSON_REPORTS=true
UPLOAD_ARTIFACTS=true
COVERAGE_REPORTING=true

# Debug Configuration
DEBUG_LOGGING=true
VERBOSE_OUTPUT=true
SAVE_INTERMEDIATE_STATES=true

# Protocol Compliance
DSM_PROTOCOL_VALIDATION=true
WHITEPAPER_COMPLIANCE_CHECKS=true
ATOMIC_OPERATION_VALIDATION=true
